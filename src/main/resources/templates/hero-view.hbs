{{#partial "content"}}
    <h1>Heroes</h1>

    <div class="row">
        <div class="col-md-6">
            {{#if heroes}}

                {{#each heroes }}
                    <li>{{name}} <a href="/heroes/{{id}}"><button class="btn btn-info btn-md">Details</button></a></li>
                {{/each}}
            {{else}}
                <p>No Heroes Available!</p>
            {{/if}}

        </div>
        <div class="col-md-6">
            {{#if hero}}
                <div class="card  text-dark">

                    <div class="card-body">
                        <h4 class="card-title">{{hero.name}}</h4>
                        <hr>
                        <p class="card-text">Age : {{hero.age}}</p><br>
                        <p class="card-text">Special Powers : {{hero.powers}}</p><br>
                        <p class="card-text">Weakness: {{hero.weakness}}</p><br>
                        <p class="card-text">Defence : {{hero.defence}}</p><br>
                        <p class="card-text">Attack : {{hero.attack}}</p><br>
                        <p class="card-text">Occupied : {{hero.occupied}}</p><br>

                    </div>
                </div>
            {{/if}}


        </div>
    </div>




{{/partial}}



{{> layout.hbs}}