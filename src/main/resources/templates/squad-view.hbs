{{#partial "content"}}
    <h1>Heroes</h1>

    <div class="row">
        <div class="col-md-6">
            {{#if squads}}

                {{#each squads }}
                    <h4>{{name}} <a href="/squads/{{id}}"><button class="btn btn-info btn-md">Details</button></a></h4>
                {{/each}}
            {{else}}
                <p>You haven't created any squads!</p>
            {{/if}}

        </div>
        <div class="col-md-6">
            {{#if squad}}
                <div class="card  text-dark">

                    <div class="card-body">
                        <h4 class="card-title">{{squad.name}}</h4>
                        <hr>
                        <p class="card-text">Max Size : {{squad.maxSize}}</p><br>
                        <p class="card-text">Cause : {{squad.cause}}</p><br>
                        <p>Heroes :</p>

                        {{#each squad.heroes}}

                            <li class="card-text">{{name}}</li><br>
                            <hr>
                            <p class="card-text">Age : {{age}}</p><br>
                            <p class="card-text">Special Powers : {{powers}}</p><br>
                            <p class="card-text">Weakness: {{weakness}}</p><br>
                            <p class="card-text">Defence : {{defence}}</p><br>
                            <p class="card-text">Attack : {{attack}}</p><br>


                        {{/each}}

                    </div>
                </div>
            {{/if}}


        </div>

    </div>




{{/partial}}



{{> layout.hbs}}