{{#partial "content"}}


    {{#if username}}

        <div class="row">
            <h1>Welcome {{username}} to Hero Squad</h1>
        </div>
        <div class="row">
            <a href="/create/hero"><button class="btn btn-success">Create Hero</button></a>
            <a href="/create/squad"><button class="btn btn-success">Create Squad</button></a>

        </div>


    {{else}}
        <form action="/welcome" method="post">
            <h1>Welcome to Hero Squad </h1>
            <label for="username">Name</label>
            <input type="text" name="username" id="username">
            <button type="submit" class="btn btn-primary">Sign In</button>

        </form>



    {{/if}}






{{/partial}}



{{> layout.hbs}}